<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroud"
    tools:context=".Activity.VodDetailActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vod_detail_poster"
            android:layout_width="531dp"
            android:layout_height="300dp"
            android:layout_marginTop="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/temp_category_img3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="75dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vod_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#F1F1F1"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/vod_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="类型：戏曲"
                android:textColor="#F1F1F1"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/vod_actor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text=""
                android:textColor="#F1F1F1"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/vod_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginRight="80dp"
                android:text=""
                android:textColor="#F1F1F1"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_detail_play"
            android:layout_width="140dp"
            android:layout_height="53dp"
            android:scaleType="centerCrop"
            android:focusable="true"
            android:src="@drawable/detail_btn_play"/>
